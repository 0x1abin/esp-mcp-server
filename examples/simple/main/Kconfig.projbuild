menu "MCP Component Example Configuration"

    config EXAMPLE_LED_GPIO
        int "LED GPIO number"
        range 0 48
        default 2 if IDF_TARGET_ESP32
        default 8 if IDF_TARGET_ESP32C2 || IDF_TARGET_ESP32C3
        default 2 if IDF_TARGET_ESP32C6
        default 2 if IDF_TARGET_ESP32S2
        default 48 if IDF_TARGET_ESP32S3
        default 2
        help
            GPIO number for the LED that can be controlled via MCP.

    config EXAMPLE_BUTTON_GPIO
        int "Button GPIO number"
        range 0 48
        default 0 if IDF_TARGET_ESP32
        default 9 if IDF_TARGET_ESP32C2 || IDF_TARGET_ESP32C3
        default 9 if IDF_TARGET_ESP32C6
        default 0 if IDF_TARGET_ESP32S2
        default 0 if IDF_TARGET_ESP32S3
        default 0
        help
            GPIO number for the button that can be read via MCP.

endmenu
